{
  "name": "vincenzodibiaggio/drupal8_base",
  "description": "Base installation to new Drupal8 Project with file-based Configuration Management and Docker based env",
  "type": "project",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Vincenzo Di Biaggio",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org"
    }
  ],
  "require": {
    "composer/installers": "^1.0.20",
    "drupal-composer/drupal-scaffold": "~1",
    "drupal/core": "8.2.3",
    "drush/drush": "~8.0",
    "alchemy/zippy": "0.3.5",
    "drupal/console": "~1.0",
    "drupal/config_update": "8.1.*@dev",
    "drupal/bootstrap": "8.3.1",
    "drupal/adminimal_theme": "8.1.3"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "config": {
    "bin-dir": "bin/"
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "post-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::buildScaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::buildScaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ]
  },
  "extra": {
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    }
  }
}
